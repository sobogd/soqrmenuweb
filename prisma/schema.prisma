// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  otp       String?
  otpExpiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companies       UserCompany[]
  supportMessages SupportMessage[]

  @@map("users")
}

model Company {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Stripe
  stripeCustomerId     String? @unique
  stripeSubscriptionId String? @unique

  // Subscription
  plan               Plan               @default(FREE)
  billingCycle       BillingCycle?
  subscriptionStatus SubscriptionStatus @default(INACTIVE)
  currentPeriodEnd   DateTime?
  paymentProcessing  Boolean            @default(false)

  // Admin
  reminderSentAt DateTime?

  users           UserCompany[]
  categories      Category[]
  items           Item[]
  restaurants     Restaurant[]
  pageViews       PageView[]
  supportMessages SupportMessage[]

  @@map("companies")
}

enum Plan {
  FREE
  BASIC
  PRO
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  INACTIVE
  ACTIVE
  PAST_DUE
  CANCELED
  EXPIRED
}

model Restaurant {
  id              String   @id @default(cuid())
  title           String
  description     String?
  slug            String?
  currency        String   @default("EUR")
  source          String?
  accentColor     String   @default("#E11D48")
  address         String?
  x               String?
  y               String?
  phone           String?
  instagram       String?
  whatsapp        String?
  languages       String[] @default(["en"])
  defaultLanguage String   @default("en")
  hideTitle       Boolean  @default(false)
  companyId       String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Reservation settings
  reservationsEnabled    Boolean @default(false)
  reservationMode        String  @default("manual") // "auto" | "manual"
  reservationSlotMinutes Int     @default(90)
  workingHoursStart      String  @default("10:00")
  workingHoursEnd        String  @default("22:00")

  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  tables       Table[]
  reservations Reservation[]

  @@index([companyId])
  @@map("restaurants")
}

model Table {
  id           String   @id @default(cuid())
  restaurantId String
  number       Int
  capacity     Int
  zone         String?
  translations Json?    // { "en": { "zone": "..." }, "es": {...} }
  imageUrl     String?
  isActive     Boolean  @default(true)
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant   Restaurant    @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  reservations Reservation[]

  @@index([restaurantId])
  @@index([restaurantId, isActive])
  @@map("tables")
}

model Reservation {
  id           String   @id @default(cuid())
  restaurantId String
  tableId      String
  date         DateTime @db.Date
  startTime    String   // "19:00"
  duration     Int      // minutes
  guestName    String
  guestEmail   String
  guestPhone   String?
  guestsCount  Int
  status       String   @default("pending") // pending, confirmed, cancelled, completed
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  table      Table      @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@index([restaurantId, date])
  @@index([restaurantId, status])
  @@index([tableId, date])
  @@map("reservations")
}

model Category {
  id           String   @id @default(cuid())
  name         String
  translations Json?    // { "en": { "name": "..." }, "es": {...} }
  sortOrder    Int      @default(0)
  isActive     Boolean  @default(true)
  companyId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  items   Item[]

  @@index([companyId])
  @@index([companyId, sortOrder])
  @@map("categories")
}

model Item {
  id           String   @id @default(cuid())
  name         String
  description  String?
  translations Json?    // { "en": { "name": "...", "description": "..." }, "es": {...} }
  price        Decimal  @db.Decimal(10, 2)
  imageUrl     String?
  allergens    String[] @default([]) // Array of allergen codes: gluten, dairy, eggs, etc.
  sortOrder    Int      @default(0)
  isActive     Boolean  @default(true)
  categoryId   String
  companyId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([categoryId])
  @@index([companyId, categoryId])
  @@index([categoryId, sortOrder])
  @@map("items")
}

model UserCompany {
  id        String   @id @default(cuid())
  userId    String
  companyId String
  role      String   @default("owner")
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([userId, companyId])
  @@map("users_companies")
}

model PageView {
  id        String   @id @default(cuid())
  companyId String
  sessionId String
  page      String   // 'home' | 'contacts' | 'language' | 'menu'
  language  String
  referrer  String?
  createdAt DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId, createdAt])
  @@index([companyId, sessionId])
  @@index([createdAt])
  @@map("page_views")
}

model SupportMessage {
  id        String   @id @default(cuid())
  companyId String
  userId    String
  message   String   @db.Text
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([companyId, createdAt])
  @@map("support_messages")
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  event     String
  sessionId String
  userId    String?
  page      String?
  meta      Json?
  createdAt DateTime @default(now())

  @@index([event, createdAt])
  @@index([sessionId])
  @@index([userId])
  @@index([createdAt])
  @@map("analytics_events")
}
